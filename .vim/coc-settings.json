{
  "languageserver": {
    "ccls": {
      "command": "ccls",
      "filetypes": ["c", "c.doxygen", "cpp", "cpp.doxygen", "objc", "objcpp"],
      "rootPatterns": [".ccls", "compile_commands.json", ".vim/", ".git/", ".hg/"],
      "initializationOptions": {
         "cache": {
           "directory": "/tmp/ccls"
         }
       }
    }
  },
  "snippets.extends": {
    "cpp": ["c"]
  }
}
